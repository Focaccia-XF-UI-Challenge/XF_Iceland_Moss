<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="Iceland_Moss.Controls.ProductDisplayPopover"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Iceland_Moss.Controls"
    xmlns:fas="clr-namespace:FontAwesome"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <BoxView Grid.RowSpan="3" />
        <BoxView
            x:Name="BackgroundPannel"
            Grid.Row="2"
            BackgroundColor="White"
            CornerRadius="30,30,0,0"
            VerticalOptions="Fill" />
        <ImageButton
            Margin="20"
            Padding="10"
            BackgroundColor="Transparent"
            HeightRequest="48"
            WidthRequest="48"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Clicked="ImageButton_Clicked"
            Source="back_arrow.png" />
        <ImageButton
            Margin="20"
            Padding="10"
            BackgroundColor="#33FFFFFF"
            HeightRequest="48"
            WidthRequest="48"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Source="heart.png"
            Style="{StaticResource ButtonStyle}" />

        <Grid
            x:Name="ProductPopoverGrid"
            Grid.Row="2"
            Margin="20"
            RowSpacing="20"
            VerticalOptions="End">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Text="{Binding SeletedProduct.Name}" Style="{StaticResource HeaderFontLight}" />
            <!--  設定數量&金額 Start  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        CornerRadius="14"
                        Text="-"
                        WidthRequest="48"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Clicked="DecreaseQuanitiy_Clicked"
                        Style="{StaticResource ButtonStyle}" />
                    <Label
                        x:Name="QuantityDisplay"
                        Grid.Column="1"
                        Text="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Style="{StaticResource HeaderFontLight}" />
                    <Button
                        Grid.Column="2"
                        CornerRadius="14"
                        Text="+"
                        WidthRequest="48"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Clicked="IncreaseQuanitiy_Clicked"
                        Style="{StaticResource ButtonStyle}" />
                </Grid>
                <StackLayout
                    x:Name="PriceLabel"
                    Grid.Column="1"
                    Margin="10,0"
                    Orientation="Horizontal"
                    Spacing="4"
                    HorizontalOptions="Center">
                    <Label
                        FontSize="14"
                        Text="$"
                        TranslationY="11" />
                    <Label
                        x:Name="QuantityDisplayValue"
                        FontSize="40"
                        Text="{Binding SeletedProduct.Price}"
                        HorizontalOptions="Start"
                        VerticalOptions="Start"
                        Style="{StaticResource HeaderFontLight}" />

                </StackLayout>
                <Label
                    Grid.Column="1"
                    IsVisible="false"
                    Text="$19"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Style="{StaticResource HeaderFontLight}" />
            </Grid>
            <!--  設定數量&金額 End  -->

            <!--  相關資訊(包含FontAwesome) Start  -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <controls:InfoPanel
                    Title="Humidity"
                    Grid.Column="0"
                    TitleIcon="{Static fas:FontAwesomeIcons.Tint}"
                    Value="50-75%" />
                <controls:InfoPanel
                    Title="Light"
                    Grid.Column="1"
                    TitleIcon="{Static fas:FontAwesomeIcons.Sun}"
                    Value="5K - 10K lux" />

                <controls:InfoPanel
                    Title="Temperature"
                    Grid.Column="2"
                    TitleIcon="{Static fas:FontAwesomeIcons.TemperatureHigh}"
                    Value="18 - 27 °C" />
            </Grid>
            <!--  相關資訊(包含FontAwesome) End  -->
            <!--  說明 Start  -->
            <StackLayout Grid.Row="3">
                <Label Text="Contained in glass polygonal florarium." Style="{StaticResource BodyFontLight}" />
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Size: " Style="{StaticResource BodyFontMedium}" />
                            <Span Text="150 * 150 mm." Style="{StaticResource BodyFontLight}" />
                            <Span Text="   " />
                            <Span Text="Diameter: " Style="{StaticResource BodyFontMedium}" />
                            <Span Text="190mm." Style="{StaticResource BodyFontLight}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>
            <!--  說明 End  -->

            <!--  按鈕 Start  -->
            <pancake:PancakeView
                x:Name="btnAddToCart"
                Grid.Row="4"
                BackgroundColor="#FB9B63"
                CornerRadius="10"
                HeightRequest="60">
                <Label
                    FontSize="20"
                    Text="Add to Cart"
                    TextColor="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </pancake:PancakeView>
            <!--  按鈕 End  -->
        </Grid>


    </Grid>
</ContentView>